{
  "name": "eggd_nimagen_to_gel_vcf",
  "title": "eggd_nimagen_to_gel_vcf",
  "summary": "App to convert sentieon dnaseq output VCF to VCF meeting GEL specification for WGS SNP genotyping",
  "properties": {
    "githubRelease": "v1.3.0"
  },
  "dxapi": "1.3.0",
  "openSource": true,
  "version": "1.3.0",
  "inputSpec": [
    {
      "name": "input_vcf",
      "label": "dnaseq_vcf",
      "help": "The ID of a sentieon output VCF file for GEL vcf conversion",
      "class": "file",
      "patterns": ["*.vcf.gz"],
      "optional": false
    },
    {
      "name": "input_vcf_index",
      "label": "vcf_index",
      "help": "The index file corresponding to the input VCF file",
      "class": "file",
      "patterns": ["*vcf.gz.tbi"],
      "optional": false
    },
    {
      "name": "fasta_file",
      "label": "GRCh38 genome fasta",
      "help": "GRCh38 genome fasta",
      "class": "file",
      "patterns": ["*fa.gz"],
      "optional": false
    },
    {
      "name": "header_txt",
      "label": "header_txt",
      "help": "The correct header txt file to replace the original vcf header to match GEL specifications. Version of header must match version of snp nimagen assay",
      "class": "file",
      "patterns": ["*txt"],
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "GEL_vcf",
      "label": "GEL_vcf",
      "help": "",
      "class": "file",
      "patterns": ["*"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 6
      }
    },
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "file": "src/code.sh",
    "assetDepends": [
      {
        "name": "htslib",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/htslib/htslib_v1.12.0",
        "version": "1.12.0"
      }
    ]
  },
  "authorizedUsers": [
    "org-emee_1"
  ],
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd2_v2_x4"
        }
      }
    }
  },
  "details": {
    "citations": [
      "doi:10.1093/bioinformatics/btp352"
    ],
    "upstreamProjects": [
      {
        "name": "bcftools",
        "repoUrl": "https://github.com/samtools/bcftools",
        "version": "1.11",
        "license": "MIT/Expat",
        "licenseUrl": "https://github.com/samtools/bcftools/blob/1.11/LICENSE",
        "author": "samtools"
      }
    ],
    "contactEmail": "East GLH Bioinformatics",
    "whatsNew": "* Initial app\n"
  },
  "categories": [],
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "ignoreReuse": true
}
